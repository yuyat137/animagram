%section.mt-1.lg:grid-cols-4.gap-x-6.gap-y-8.mx-4
  = form_with model: comment, url: [article,comment], local: true do |f|
    = render 'shared/error_messages', object: f.object
    .text-center.mt-4.bg-white.rounded.border.border-yellow-500.mb-8
      = f.text_area :body, :size=>"80x3"
    .mb-12
      = f.submit 'コメントする', class: 'bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded mx-auto flex justify-center'
