- provide(:title, 'New')
.flex.flex-col.min-h-screen
  %main.flex-grow.bg-yellow-100.bg-white.rounded.overflow-hidden.shadow-lg.p-8.rounded-lg
    = form_with model: @user, local:true do |f|
      = render 'shared/error_messages', object: f.object
      .inputWithIcon.mt-8
        = f.text_field :name, :placeholder => "YourName"
        %i.fa.fa-user.fa-lg.fa-fw{"aria-hidden" => "true"}
      .inputWithIcon.mt-8
        = f.text_field :email, :placeholder => "Email"
        %i.fa.fa-envelope.fa-lg.fa-fw{"aria-hidden" => "true"}
      .inputWithIcon.mt-8
        = f.password_field :password, :placeholder => "Password"
        %i.fa.fa-key.fa-lg.fa-fw{"aria-hidden" => "true"}
      .inputWithIcon.mt-8
        = f.password_field :password, :placeholder => "Password again..."
        %i.fa.fa-key.fa-lg.fa-fw{"aria-hidden" => "true"}
      = f.submit t('.register'), class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mx-auto flex justify-center mt-12'
