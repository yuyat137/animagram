.bg-yellow-100
  = form_with model: @article, url: category_list_path, method: :get, local: true do |f|
    .ml-8.mt-4.mb-8.md:text-xl.sm:text-3xl
      %p= t('defaults.choice_category')
      .md:text-xl.sm:text-2xl
        = f.collection_select :category_id, Category.all, :id, :display_name, { include_blank: "選択してください" }
        = f.submit t('defaults.choice_category_button'), class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded'
  - if @categories.present?
    - @categories.each do |article|
      = render 'article', { article: article }
  - else
    .bg-green-100.border.border-yellow-500.text-green-700.px-4.py-3.rounded.mx-10.my-10
      %p= t('defaults.no_article')
