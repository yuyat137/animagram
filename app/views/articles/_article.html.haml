%section.max-w-7xl.mx-auto.sm:px-6.lg:px-4.mt-12
  %section.mt-6.grid.md:grid-cols-2.lg:grid-cols-4.gap-x-6.gap-y-8
    %h2.text-2xl.font-extrabold.text-gray-900.text-center.mt-12
      = link_to article.title, article_path(article)
      .flex-grow.border-b-2.border-gray-300.py-2.text-lg.px-1
    %article.bg-white.group.relative.rounded-lg.overflow-hidden.shadow-lg
      .relative.w-full.h-80.md:h-64.lg:h-44
        %img.w-full.h-full.object-center.object-cover(alt="Desk with leather desk pad, walnut desk organizer, wireless keyboard and mouse, and porcelain mug." src="https://cdn.pixabay.com/photo/2021/07/24/01/42/zebra-dove-6488440_960_720.jpg")/
      .px-3.py-4
        %h3.text-sm.text-gray-500.pb-2
        %a.bg-pink-400.py-1.px-2.text-white.rounded-lg(href="#")
          %span.absolute.inset-0
          ランド
        %a.bg-blue-400.py-1.px-2.text-white.rounded-lg(href="#")
          %span.absolute.inset-0
          シー
        %p.text-base.font-semibold.text-gray-600.group-hover:text-indigo-600
          = article.description
        %p.text-base.font-semibold.text-gray-600.group-hover:text-indigo-600.text-right
          = article.user.name
