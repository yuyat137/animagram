- provide(:title, 'Top Page')
= form_with model: @article, url: category_list_path, method: :get, local: true do |f|
  = f.collection_select :category_id, Category.all, :id, :display_name
  = f.submit '開く', class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mx-auto flex justify-center'
.bg-yellow-100.pt-10
  - if @articles.present?
    = render @articles
    = paginate @articles
  - else
    .bg-green-100.border.border-yellow-500.text-green-700.px-4.py-3.rounded.mx-10.my-10
      %p= t('defaults.no_article')
