= form_with model: article, local: true do |f|
  = render 'shared/error_messages', object: f.object
  .md:text-1xl.sm:text-3xl
    = f.label :title
  .bg-white.rounded.border.border-green-500.mb-8.md:text-1xl.sm:text-3xl
    = f.text_area :title, :size=>"80x2", id: 'article_title'
  .focus:border-indigo-300.py-6.md:text-1xl.sm:text-3xl
    = f.label :description
    %br
    .bg-white.rounded.border.border-green-500.mb-8.text-center.md:text-1xl.sm:text-3xl
      = f.text_area :description, :size=>"80x20", id: 'article_description'
    = f.submit t('defaults.update'), class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mx-auto flex justify-center'
